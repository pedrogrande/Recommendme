<p id="notice"><%= notice %></p>

<h1>
  <%= @account.name %>'s Profile
</h1>

<p><img class="img-circle" src="<%= @account.picture %>" width="140" alt=""></p>

<h3><%= @account.name %>'s Tips</h3>
<p><%= link_to 'Add tip', new_tip_path %></p>
<p><%= link_to 'Add planner', new_plan_path %></p>

<% @locations.each do |location| %>
  <div class="panel panel-default">
    <div class="panel-heading"><%= location.city %>, <%= location.country %> <%= link_to 'Add tip', new_tip_path(location: location.id) %></div>
    <div class="panel-body">
    <table class="table">
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>

    <% location.tips.each do |tip| %>
      <tr>
        <td><%= tip.tip_type %></td>
        <td><%= tip.name %></td>
        <td><%= tip.description %></td>
        <td><%= tip.price %></td>
        <td><%= tip.website %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip), class: 'btn btn-edit' %></td>
        <td><%= link_to 'Delete', tip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
      </tr>
    <% end %> 
    </table>
    </div>
  </div>
<% end %>


<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>
