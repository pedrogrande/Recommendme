<h1>Listing locations</h1>

<table class="table">
    <tr>
      <th>Country</th>
      <th>City</th>
      <th>Region</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @locations) do |location| %>
    <td><%= location.country %></td>
    <td><%= location.city %></td>
    <td><%= location.region %></td>
      <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Location', new_location_path, class: 'btn btn-success' %>
</div>
