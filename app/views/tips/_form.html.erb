<%= simple_form_for(@tip) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :country %>
    <%= f.input :city %>
    <%= f.input :region %>
    <%= f.input :name %>
    <%= f.input :tip_type, collection: ['Accommodation', 'Restaurant', 'Bar', 'Nightclub', 'Sight', 'Daytrip', 'Shop', 'Activity', 'Nature eg beach, lake, rainforest', 'Other']  %>
    <%= f.input :description %>
    <%= f.input :price, collection: ['$', '$$', '$$$', '$$$$']%>
    <%= f.input :initally_recommended_by %>
    <%= f.input :best_for, collection: ['Group holiday', 'Romantic getaway', 'Young traveller', 'Older traveller', 'LGBT', 'Backpacker']  %>
    <%= f.input :address %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.input :website %>
    <%= f.association :user %>
    <%= f.association :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
